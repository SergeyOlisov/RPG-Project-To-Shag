                </Image>
            </Grid>
            <TextBlock x:Name="TextBloc_Hero_Intelect" Grid.Column="1" Text="15" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Image x:Name="Button_Vitality_Down" Source="/data/images/minus.png" Margin="20,10,0,010" MouseDown="Button_Vitality_Down_MouseDown">
